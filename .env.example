MONGO_URI=mongodb+srv://username:password@your-cluster.mongodb.net/?appName=your-app
MONGO_DB_NAME=scp_verification_dev

# Ollama Configuration
OLLAMA_MODEL=ollama/qwen2.5:7b
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_API_KEY=ollama

# LLM Settings
LLM_TIMEOUT=600

# OCR Service Configuration (VLM-based OCR)
# ------------------------------------------
# OpenAI-compatible API endpoint (e.g., vLLM server)
OPENAI_API_BASE=http://localhost:8001/v1

# API key (can be dummy for local vLLM)
OPENAI_API_KEY=sk-dummy-key

# OCR model name (e.g., Qwen2-VL, InternVL2, etc.)
OCR_MODEL_NAME=Qwen/Qwen2-VL-7B-Instruct

# Maximum concurrent OCR requests
OCR_MAX_CONCURRENCY=16

# Maximum retry attempts per page
OCR_MAX_RETRIES=3

# Request timeout in seconds
OCR_TIMEOUT_SECONDS=60

# Maximum tokens for OCR response
OCR_MAX_TOKENS=16384

# Temperature for OCR model (0.0 for deterministic)
OCR_TEMPERATURE=0.0
PORT=8010

# MinIO Configuration
MINIO_ENDPOINT=minio.example.com:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=smeta-documents
MINIO_REGION=us-east-1
MINIO_SECURE=false
